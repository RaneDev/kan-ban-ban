<UserControl x:Class="MainModule.CustomControls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainModule.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContextChanged="updated">
    <Grid Margin="5">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10" BorderBrush="White" BorderThickness="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="-90" Color="Gray"
                              RenderingBias="Performance" ShadowDepth="1"/>
            </Border.Effect>
            <Grid Background="White" HorizontalAlignment="Right" MinWidth="200" MinHeight="100">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"  x:Name="tbx" TextWrapping="Wrap" Margin="10" FontSize="15" FontWeight="DemiBold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
